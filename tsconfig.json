{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"strict": false,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": [
			"esnext",
			"dom"
		],
		"types": [
			"webpack-env"
		],
	},
	"include": [
		"examples/**/*.ts",
		"examples/**/*.tsx",
		"examples/**/*.vue",
		"tests/**/*.ts",
		"tests/**/*.tsx",
		"packages/**/*.ts",
		"packages/**/*.tsx",
		"packages/**/*.vue",
	],
	"exclude": [
		"node_modules",
		"build"
	]
}